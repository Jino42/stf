#ifndef RANGE_HL
# define RANGE_HL

#include "Random.hl"

typedef struct sRangef {
    int isRange;
    float min;
    float max;
} Rangef;

typedef struct sRangei {
    int isRange;
    int min;
    int max;
} Rangei;

float getRandomRangef(__global Rangef *range, int seed)
{
    if (range->isRange)
        return randomMinMax(seed, range->min, range->max);
    return range->max;
}

#endif